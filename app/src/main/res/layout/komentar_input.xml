<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <View android:background="#000" android:layout_width="match_parent" android:layout_height="2dp" android:layout_alignParentTop="true" android:id="@+id/border"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_below="@+id/border"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:weightSum="3" android:background="@color/textWhite">
        <EditText
            android:textColorHint="@color/greyCustom"
            android:padding="@dimen/paddingitem"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="@color/textBlack"
            android:id="@+id/komentar"
            android:hint="@string/placeholder_komentar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:layout_margin="@dimen/paddingitem"
            android:textColor="@color/textWhite"
            android:background="@drawable/button_selector"
            android:padding="@dimen/paddingitem"
            android:textAlignment="center"
            android:layout_weight="2"
            android:textSize="15sp"
            android:id="@+id/kirim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_kirim"/>
    </LinearLayout>
</RelativeLayout>
