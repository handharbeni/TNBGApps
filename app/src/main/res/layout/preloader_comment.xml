<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/items"
        android:layout_alignParentTop="true"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:background="@color/textWhite" android:padding="@dimen/paddingtitle">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="5dp"
                android:background="@color/greyPreload"
                android:padding="25dp"
                android:id="@+id/nama"
                android:layout_width="75dp"
                android:layout_height="7dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/nama"
                android:layout_toRightOf="@+id/nama"
                android:background="@color/greyPreload"
                android:padding="25dp" />
        </RelativeLayout>
        <ImageView
            android:layout_marginTop="7dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="5dp"
            android:paddingTop="25dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:background="@color/greyPreload"
            android:layout_width="match_parent"
            android:layout_height="7dp" />
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginRight="55dp"
            android:layout_marginLeft="5dp"
            android:background="@color/greyPreload"
            android:paddingTop="2dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="7dp" />
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="5dp"
            android:background="@color/greyPreload"
            android:paddingTop="2dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="7dp" />
    </LinearLayout>
    <View android:background="@color/greyPreload" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_below="@+id/items" android:id="@+id/border"/>
</RelativeLayout>
