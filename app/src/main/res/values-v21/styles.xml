<resources>

    <style name="AppTheme.SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:queryBackground">@color/greyCustom</item>
        <!--        <item name="queryBackground">...</item>
                <item name="submitBackground">...</item>-->
    </style>

    <style name="AppTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:itemBackground">@color/greyCustom</item>
        <item name="searchViewStyle">@style/AppTheme.SearchViewStyle</item>
        <item name="android:progressBackgroundTint">@color/blueCustom</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:itemBackground">@color/greyCustom</item>
        <item name="searchViewStyle">@style/AppTheme.SearchViewStyle</item>
        <item name="android:textColorHint">@color/blueCustom</item>
        <item name="android:textColorHighlight">@color/blueCustom</item>
        <item name="colorControlNormal">@color/greyCustom</item>
        <item name="android:backgroundTint">@color/blueCustom</item>
        <!--
                <item name="android:colorControlActivated">@color/blueCustom</item>
                <item name="android:colorControlHighlight">@color/blueCustom</item>
        -->
        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
    </style>
</resources>
