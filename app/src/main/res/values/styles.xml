<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:itemBackground">@color/greyCustom</item>
        <item name="searchViewStyle">@style/AppTheme.SearchViewStyle</item>
        <item name="android:textColorHint">@color/blueCustom</item>
        <item name="android:textColorHighlight">@color/blueCustom</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:itemBackground">@color/greyCustom</item>
        <item name="searchViewStyle">@style/AppTheme.SearchViewStyle</item>
        <item name="android:textColorHint">@color/blueCustom</item>
        <item name="android:textColorHighlight">@color/blueCustom</item>
        <item name="colorControlNormal">@color/greyCustom</item>
<!--
        <item name="android:colorControlActivated">@color/blueCustom</item>
        <item name="android:colorControlHighlight">@color/blueCustom</item>
-->
        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
    </style>
    <style name="AppTheme.ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:itemBackground">@color/greyCustom</item>
        <item name="android:textColorPrimary">@color/greyCustom</item>
        <item name="searchViewStyle">@style/AppTheme.SearchViewStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:itemBackground">@color/greyCustom</item>
        <item name="android:textColorPrimary">@color/greyCustom</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:itemBackground">@color/greyCustom</item>
        <item name="android:textColorPrimary">@color/greyCustom</item>
    </style>
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/greyCustom</item>
    </style>
    <style name="AppTheme.SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorHint">@color/greyCustom</item>
<!--        <item name="queryBackground">...</item>
        <item name="submitBackground">...</item>-->
    </style>
</resources>
